<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:card="http://schemas.android.com/apk/res/com.idlepilot.xuzy.scrap"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#fff"
              android:orientation="vertical">


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#ffffff"
        android:gravity="center"
        android:text="碎纸片"
        android:textColor="#000000"
        android:textSize="18sp"/>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#000000"
        />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <com.idlepilot.xuzy.scrap.controller.CardSlidePanel
            android:id="@+id/image_slide_panel"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            card:bottomMarginTop="40dp"
            card:yOffsetStep="22dp">

            <LinearLayout
                android:id="@+id/card_bottom_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/card_left_btn"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/ignore_button"/>

                <Button
                    android:id="@+id/card_center_btn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/home_button"/>

                <Button
                    android:id="@+id/card_right_btn"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/add_button"/>
            </LinearLayout>

            <com.idlepilot.xuzy.scrap.view.CardItemView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"/>

            <com.idlepilot.xuzy.scrap.view.CardItemView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"/>

            <com.idlepilot.xuzy.scrap.view.CardItemView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"/>

            <com.idlepilot.xuzy.scrap.view.CardItemView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"/>

        </com.idlepilot.xuzy.scrap.controller.CardSlidePanel>
    </RelativeLayout>

</LinearLayout>