<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#00bfff"
        android:gravity="center"
        android:text="增加"
        android:textColor="#ffff"
        android:textSize="20sp" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >


        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="260dp"
            android:id="@+id/cardadd_imageView"
            android:layout_alignParentTop="true" />
        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/card_add_button"
            android:background="@drawable/card_left2"

            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="72dp" />




            <TextView
                android:id="@+id/card_date"
                android:layout_width="70dp"
                android:layout_height="20dp"
                android:gravity="center_horizontal"
                android:text="输入时间"
                android:textColor="#111"
                android:layout_above="@+id/card_content"
                android:layout_alignParentStart="true" />

            <EditText
                android:id="@+id/card_content"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:gravity="center_horizontal"
                android:text="输入文本"
                android:textColor="#111"
                android:textSize="18sp"
                android:layout_above="@+id/card_bottom_layout"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true" />


        <LinearLayout
            android:id="@+id/card_bottom_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="53dp">

            <Button
                android:id="@+id/card_cancel_btn"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/ignore_button" />


            <Button
                android:id="@+id/card_confirm_btn"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/like_button" />
        </LinearLayout>


    </RelativeLayout>

</LinearLayout>